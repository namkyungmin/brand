    <script>
        honorsvilleBrand.subTab();

        /* Brand Story */
        //공통변수
        var $sec2 = $(".sec2");
        var $sec6Txt = $(".sec6").find("p");
        var autoRolling;
        var sec2Delay = 800, sec6Delay = 800;

        //모션 함수 초기화
        function bgTxt(secNum){
            var txtWidth = $(".sec" + secNum).find(".txt_wrap").find(".inner").width();

            $(".sec" + secNum).find(".txt_wrap").css("left", "0");
            $(".sec" + secNum).find(".txt_wrap").stop().animate({"left": "-" + txtWidth}, 20000, "linear", function(){
                bgTxt(secNum);
            });
        }
        
        //모션 함수 초기화
        function TxtInit(secNum){
            var $secIdx = $('.sec' + secNum),
                $secImg = $secIdx.find(".rolling_img").find("li");

            $secImg.eq(0).addClass("active").siblings().removeClass('active');
            $(".sec" + secNum).find(".swiper_right_img").removeClass("on");
            $(".sec" + secNum).find(".swiper_left_img").removeClass("on");
        }

        //section1 모션
        function sec1Text(){
            $sec2.find(".text").each(function(index,item){
                $(item).find(".opa").find("span").each(function(_idx, ele){
                    setTimeout(function(){
                        $(ele).animate({"width": "100%"}, 600);
                    },sec2Delay*_idx , "easeInOutQuart");
                });
            });
            setTimeout(function(){
                $sec2.find(".desc_sec2").animate({"opacity":1, "bottom":0 + "px"}, 800);
            },2200 , "easeInOutQuart");
        }

        //Bg Text 모션 초기화
        function TxtBgInit(secNum){
            var $secIdx = $('.sec' + secNum);
            $(".sec" + secNum).find(".txt_wrap").stop().css("left", "0");
        }

        //스와이프 모션
        function swiperImg(secNum){
            $(".sec" + secNum).find(".swiper_right_img").addClass("on");
            $(".sec" + secNum).find(".swiper_left_img").addClass("on");
        }

        //롤링 모션
        function rolling(secNum){
            var $secIdx = $('.sec' + secNum);
            var $secImg = $secIdx.find(".rolling_img").find("li"), 
                $secTxt = $secIdx.find(".rolling_txt").find("li");
            var galleryTime = 600, galleryTime2 = 900;
            var galleryCnt = 0;
            var txtLen = $secTxt.length - 1;
            var textBtm;

            $secTxt.eq(0).stop().animate({"opacity": "1"}, galleryTime);

            autoRolling = setInterval(function(){
                setTimeout(function(){
                    $secImg.eq(galleryCnt).addClass("active");
                    setTimeout(function(){
                        $secImg.eq(galleryCnt).siblings("li").removeClass("active");
                    }, 1000);
                }, galleryTime);

                if(galleryCnt < txtLen){
                    textBtm = 50;
                }else {
                    textBtm = 0;
                }

                setTimeout(function(){
                    $secTxt.eq(galleryCnt).stop().animate({"opacity": "1"}, galleryTime);
                }, galleryTime2);

                galleryCnt++;

                if(galleryCnt > 2){
                    clearInterval(autoRolling);
                };
            }, 2500);
        }

        function sec6Text(){
            $sec6Txt.each(function(index,item){
                setTimeout(function(){
                    $(item).animate({"bottom": 0, "opacity": 1}, 500);
                },sec6Delay*index , "easeInOutQuart");
            });
        }

        //Full Page
        var brFull = new fullpage('#fullpage', {
            licenseKey: '498CFFC8-84564252-8A0832C7-81EE6C6B',

            parallax: true,
            parallaxKey: 'aG9ub3JzdmlsbGUuY28ua3JfZm42Y0dGeVlXeHNZWGc9SVdk',
            parallaxOptions: {
                type: 'cover',
                percentage: 62,
                property: 'translate'
            },
            anchors: ['section0', 'section1', 'section2', 'section3', 'section4', 'section5', 'section6'],
            scrollingSpeed: 1000,
            autoScrolling: true,
            fitToSection:false,
            onLeave: function(origin, destination, direction){
                //초기설정
                if(origin.index == 2){
                    clearInterval(autoRolling);
                    TxtInit(3);
                }
                if(origin.index == 3){
                    clearInterval(autoRolling);
                    TxtInit(4);
                }
                if(origin.index == 4){
                    clearInterval(autoRolling);
                    TxtInit(5);
                }

                //모션실행
                //section3
                if(destination.index == 2){
                    rolling(3);
                }
                //section4
                if(destination.index == 3){
                    rolling(4);
                }
                //section5
                if(destination.index == 4){
                    rolling(5);
                }
            },
            afterLoad: function(origin, destination, direction){
                //초기설정
                if(origin.index == 2){
                    TxtBgInit(3);
                }
                if(origin.index == 3){
                    TxtBgInit(4);
                }
                if(origin.index == 4){
