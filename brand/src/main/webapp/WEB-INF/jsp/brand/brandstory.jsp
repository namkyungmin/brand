                    sec1Text();
                };
                //section3
                if(destination.index == 2){
                    bgTxt(3);
                    swiperImg(3);
                };
                 //section4
                if(destination.index == 3){
                    bgTxt(4);
                };
                //section5
                if(destination.index == 4){
                    bgTxt(5);
                    swiperImg(5);
                };
                //section6
                if(destination.index == 5){
                    sec6Text();
                }
            }
        });
